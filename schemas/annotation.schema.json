{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Annotation Schema",
  "description": "Schema for incident annotations",
  "required": ["incident_id", "timestamp", "cause", "fix"],
  "properties": {
    "incident_id": {
      "type": "string",
      "description": "ID of the incident"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the annotation"
    },
    "cause": {
      "type": "string",
      "description": "Root cause of the incident"
    },
    "fix": {
      "type": "string",
      "description": "Fix applied to resolve the incident"
    },
    "symptoms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Symptoms observed during the incident"
    },
    "runbook_gap": {
      "type": "string",
      "description": "Missing step or information in the runbook"
    }
  }
}